generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tickets   Ticket[]
}

model Ticket {
  id        String    @id @default(cuid())
  subject   String
  status    Status    @default(OPEN)
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
  user      User      @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Message {
  id        String   @id @default(cuid())
  text      String
  sender    Sender
  ticketId  String
  createdAt DateTime @default(now())
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([ticketId])
}

model Leela {
  id            String   @id @default(cuid())
  orderId       Int      @default(0)
  title_english String
  title_hindi   String
  chapter       String?
  youtube_id    String?
  description   String
  keywords      String[]
  social_tags   String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Bodhakatha {
  id            String   @id @default(cuid())
  orderId       Int      @default(0)
  theme         String
  title_english String
  title_hindi   String
  description   String
  youtube_id    String?
  keywords      String[]
  social_tags   String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Glossary {
  id            String   @id @default(cuid())
  term          String
  chapter       String?
  definition_en String
  definition_es String?
  definition_hi String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum Status {
  OPEN
  ANSWERED
  CLOSED
}

enum Sender {
  USER
  ADMIN
}
